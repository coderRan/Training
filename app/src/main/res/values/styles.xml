<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowAnimationStyle">@style/activity</item>-->
    </style>

    <style name="activity" parent="@android:style/Animation.Activity" >
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_out</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>

    </style>
    <style name="popuo_anim">
        <item name="android:windowEnterAnimation">@anim/popup_up</item>
        <item name="android:windowExitAnimation">@anim/popup_down</item>
    </style>
</resources>
