<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rg_tabs"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="#e9e9e9"
    android:orientation="horizontal">
    <!-- TODO: Update blank fragment layout -->
    <RadioButton
        android:id="@+id/rb_home"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:checked="true"
        android:drawableTop="@drawable/newhome_states_drawable"
        android:text="首页" />

    <RadioButton
        android:id="@+id/rb_video"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/newdiscover_states_drawable"
        android:text="视频" />

    <RadioButton
        android:id="@+id/rb_care"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/newcare_states_drawable"
        android:text="话题" />

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/newmine_states_drawable"
        android:text="我的" />

</RadioGroup>
