<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_newsImg"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_newsTitle"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_newsImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是新闻标题"
            android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_newsSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻来源"/>
        <TextView
            android:layout_toRightOf="@id/tv_newsSrc"
            android:id="@+id/tv_newsComm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论1111"/>
        <TextView
            android:id="@+id/tv_newsTime"
            android:layout_toRightOf="@id/tv_newsComm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论时间"/>
    </RelativeLayout>
</LinearLayout>